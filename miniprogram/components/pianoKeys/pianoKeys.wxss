.keys{
  width: 95vw;
  height: 40vh;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  position: relative;
}
.mask{
  position: absolute;
  width: 95vw;
  height: 40vh;
  top: 0;
  left: 0;
  /* background: rgba(0,0,0,.1); */
  z-index: 999;
}
.white{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.white view{
  flex: 1;
  border: 1px solid #000;
  box-sizing: border-box;
  border-right: none;
}
.white view:last-of-type{
  border: 1px solid #000;
}

.black{
  position: absolute;
  width: 100%;
  height: 20vh;
  top: 0;
  left: calc((100% / 7) / 2);
}
.black view{
  background: #000;
  height: 25vh;
  margin: 0 2vw;
  border: none !important;
}
.black view:nth-child(4), .black view:nth-child(7){
  pointer-events: none;
  background: red !important;
  visibility: hidden;
}
.white view:active, .whiteKey_keyActive{
  background: rgb(0, 174, 255);
}
